@set RESTART 0
@set PROJECT_NAME testsuite_ad
&GLOBAL
  PROJECT testsuite_ad
  RUN_TYPE GEO_OPT
#  PREFERRED_DIAG_LIBRARY SL
  PRINT_LEVEL medium
&END GLOBAL
&MOTION
 &GEO_OPT
   MAX_DR 0.1E-8
   MAX_FORCE  0.1E-8
   MAX_ITER 9000
   RMS_DR 0.1E-8
   RMS_FORCE 0.1E-8
 &END GEO_OPT
&END MOTION
&FORCE_EVAL
# &PRINT                      # print statement for ground-state or excited-state forces
#  &FORCES
#  &END FORCES
# &END PRINT 
 METHOD Quickstep
# &PROPERTIES
  &TDDFPT                    # TDDFPT input section to compute 10 excited states
   &DIPOLE_MOMENTS
    DIPOLE_FORM VELOCITY
   &END DIPOLE_MOMENTS
   KERNEL sTDA
   &STDA
     FRACTION 0.0
     DO_EWALD TRUE
     DO_EXCHANGE F
   &END STDA
   NSTATES 80
   MAX_ITER   100
   MAX_KV 20 
   CONVERGENCE [eV] 1.0e-5
   RKS_TRIPLETS F
   ADMM_KERNEL_CORRECTION_SYMMETRIC T
   &PRINT                     # NAMD print section to print excited-state eigenvectors
    &NAMD_PRINT
     PRINT_VIRTUALS T
     PRINT_PHASES T
    &END NAMD_PRINT
   &END PRINT
  &END TDDFPT
 &END PROPERTIES
  &DFT
    &QS
      METHOD GPW
     EPS_DEFAULT 1.0E-17
    &END QS
    &SCF
      SCF_GUESS restart
      &OT
         PRECONDITIONER FULL_ALL
         MINIMIZER DIIS
      &END OT
      &OUTER_SCF
         MAX_SCF 900
         EPS_SCF 1.0E-9
      &END OUTER_SCF
      MAX_SCF 10
      EPS_SCF 1.0E-9
    &END SCF
    POTENTIAL_FILE_NAME POTENTIAL
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    &MGRID
      CUTOFF 800
      REL_CUTOFF 60
    &END MGRID
    &POISSON
       PERIODIC XYZ
       PSOLVER PERIODIC
    &END
    &XC
     &XC_FUNCTIONAL PBE
     &END XC_FUNCTIONAL
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF [angstrom] 20
         &END
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
#      CELL_FILE_NAME 1421507.cif
#      CELL_FILE_FORMAT CIF
       ABC 11.252000 3.831200 11.074000
       ALPHA_BETA_GAMMA 90.000000 117.150000  90.000000
      PERIODIC XYZ
    &END CELL
# CELL_TOP| Volume [angstrom^3]:                                       424.784591
# CELL_TOP| Vector a [angstrom    11.252     0.000     0.000   |a| =    11.252000
# CELL_TOP| Vector b [angstrom     0.000     3.831     0.000   |b| =     3.831200
# CELL_TOP| Vector c [angstrom    -5.053     0.000     9.854   |c| =    11.074000
# CELL_TOP| Angle (b,c), alpha [degree]:                                90.000000
# CELL_TOP| Angle (a,c), beta  [degree]:                               117.150000
# CELL_TOP| Angle (a,b), gamma [degree]:                                90.000000
# CELL_TOP| Numerically orthorhombic:                                          NO
# CELL_TOP| Periodicity                                                       XYZ
                                    # Coordinates are provided externally for the interface
     &COORD
     @include coord.cp2k          
     &END COORD
    &TOPOLOGY
   #  &CENTER_COORDINATES T
   #  &END
  #   COORD_FILE_NAME converged_pyrazine_high.xyz
  #   COORD_FILE_FORMAT XYZ
     NATOMS 40                       # specifying number of atoms for NEWTONX
     CONNECTIVITY OFF
    &END TOPOLOGY
    &KIND H
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND N
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND C
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&VIBRATIONAL_ANALYSIS
   NPROC_REP 16
   PROC_DIST_TYPE BLOCKED
 &PRINT
  &NAMD_PRINT
  &END NAMD_PRINT
 &END PRINT
 DX 0.001
 THERMOCHEMISTRY
#   &MODE_SELECTIVE
#     &INVOLVED_ATOMS
#       INVOLVED_ATOMS 433 434 435 436 437 438 439 440 441 442 443 444 445 446 447 448
#     &END INVOLVED_ATOMS
#   &END MODE_SELECTIVE
&END VIBRATIONAL_ANALYSIS
@if ${RESTART} == 1
&EXT_RESTART
  RESTART_FILE_NAME ./${PROJECT_NAME}-1.restart
  RESTART_DEFAULT T
&END EXT_RESTART
@endif
