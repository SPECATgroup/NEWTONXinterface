@set RESTART 0
@set PROJECT_NAME testsuite_ad
&GLOBAL
  PROJECT testsuite_ad
  RUN_TYPE GEO_OPT
#  PREFERRED_DIAG_LIBRARY SL
  PRINT_LEVEL medium
&END GLOBAL
&MOTION
 &GEO_OPT
   MAX_DR 0.1E-6
   MAX_FORCE  0.1E-6
   MAX_ITER 9000
   RMS_DR 0.1E-6
   RMS_FORCE 0.1E-6
 &END GEO_OPT
&END MOTION
&FORCE_EVAL
# &PRINT                      # print statement for ground-state or excited-state forces
#  &FORCES
#  &END FORCES
# &END PRINT 
 METHOD Quickstep
# &PROPERTIES
#  &TDDFPT                    # TDDFPT input section to compute 10 excited states
#   &DIPOLE_MOMENTS
#    DIPOLE_FORM VELOCITY
#   &END DIPOLE_MOMENTS
#   KERNEL FULL
#   NSTATES 80
#   MAX_ITER   100
#   MAX_KV 20 
#   CONVERGENCE [eV] 1.0e-5
#   RKS_TRIPLETS F
#   &PRINT                     # NAMD print section to print excited-state eigenvectors
#    &NAMD_PRINT
#     PRINT_VIRTUALS T
#     PRINT_PHASES T
#    &END NAMD_PRINT
#   &END PRINT
#  &END TDDFPT
# &END PROPERTIES
  &DFT
    &QS
      METHOD GPW
     EPS_DEFAULT 1.0E-17
    &END QS
    &SCF
      SCF_GUESS restart
      &OT
         PRECONDITIONER FULL_ALL
         MINIMIZER DIIS
      &END OT
      &OUTER_SCF
         MAX_SCF 900
         EPS_SCF 1.0E-9
      &END OUTER_SCF
      MAX_SCF 50
      EPS_SCF 1.0E-9
    &END SCF
    POTENTIAL_FILE_NAME POTENTIAL
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_ADMM_UZH
    &MGRID
      CUTOFF 800
      REL_CUTOFF 60
    #  NGRIDS 5
    &END MGRID
    &POISSON
       PERIODIC XYZ
       PSOLVER PERIODIC
    &END
    &XC
     &XC_FUNCTIONAL B3LYP
     &END XC_FUNCTIONAL
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL B3LYP
            R_CUTOFF [angstrom] 10
         &END
      &END VDW_POTENTIAL
      &HF
         FRACTION 0.2
         &HF_INFO OFF
         &END
         &INTERACTION_POTENTIAL
            POTENTIAL_TYPE TRUNCATED
            CUTOFF_RADIUS 1.9
            T_C_G_DATA t_c_g.dat
         &END
         &SCREENING
           EPS_SCHWARZ 1.0E-08
           EPS_SCHWARZ_FORCES 1.0E-06
           SCREEN_ON_INITIAL_P T
         &END
         &MEMORY
            MAX_MEMORY 3500
         &END
      &END HF
    &END XC
    &AUXILIARY_DENSITY_MATRIX_METHOD
      METHOD BASIS_PROJECTION
      ADMM_PURIFICATION_METHOD NONE
      EXCH_SCALING_MODEL NONE
      EXCH_CORRECTION_FUNC PBEX
    &END
  &END DFT
  &SUBSYS
    &CELL
#      CELL_FILE_NAME 1421507.cif
#      CELL_FILE_FORMAT CIF
       ABC 11.252000 3.831200 11.074000
       ALPHA_BETA_GAMMA 90.000000 117.150000  90.000000
      PERIODIC XYZ
    &END CELL
# CELL_TOP| Volume [angstrom^3]:                                       424.784591
# CELL_TOP| Vector a [angstrom    11.252     0.000     0.000   |a| =    11.252000
# CELL_TOP| Vector b [angstrom     0.000     3.831     0.000   |b| =     3.831200
# CELL_TOP| Vector c [angstrom    -5.053     0.000     9.854   |c| =    11.074000
# CELL_TOP| Angle (b,c), alpha [degree]:                                90.000000
# CELL_TOP| Angle (a,c), beta  [degree]:                               117.150000
# CELL_TOP| Angle (a,b), gamma [degree]:                                90.000000
# CELL_TOP| Numerically orthorhombic:                                          NO
# CELL_TOP| Periodicity                                                       XYZ
                                    # Coordinates are provided externally for the interface
     &COORD
     @include coord.cp2k          
     &END COORD
    &TOPOLOGY
   #  &CENTER_COORDINATES T
   #  &END
  #   COORD_FILE_NAME converged_pyrazine_high.xyz
  #   COORD_FILE_FORMAT XYZ
     NATOMS 40                       # specifying number of atoms for NEWTONX
     CONNECTIVITY OFF
    &END TOPOLOGY
    &KIND H
      BASIS_SET TZVP-MOLOPT-GTH
      BASIS_SET AUX_FIT admm-tzp-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      BASIS_SET AUX_FIT admm-tzp-q6
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND N
      BASIS_SET TZVP-MOLOPT-GTH
      BASIS_SET AUX_FIT admm-tzp-q5
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND C
      BASIS_SET TZVP-MOLOPT-GTH
      BASIS_SET AUX_FIT admm-tzp-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&VIBRATIONAL_ANALYSIS
   NPROC_REP 16
   PROC_DIST_TYPE BLOCKED
 &PRINT
  &NAMD_PRINT
  &END NAMD_PRINT
 &END PRINT
 DX 0.001
 THERMOCHEMISTRY
#   &MODE_SELECTIVE
#     &INVOLVED_ATOMS
#       INVOLVED_ATOMS 433 434 435 436 437 438 439 440 441 442 443 444 445 446 447 448
#     &END INVOLVED_ATOMS
#   &END MODE_SELECTIVE
&END VIBRATIONAL_ANALYSIS
@if ${RESTART} == 1
&EXT_RESTART
  RESTART_FILE_NAME ./${PROJECT_NAME}-1.restart
  RESTART_DEFAULT T
&END EXT_RESTART
@endif
