&GLOBAL
  PROJECT testsuite_ad
  RUN_TYPE ENERGY
  PREFERRED_DIAG_LIBRARY SL
  PRINT_LEVEL medium
&END GLOBAL
&MOTION
 &GEO_OPT
   MAX_DR 0.1E-8
   MAX_FORCE  0.1E-8
   MAX_ITER 900
   RMS_DR 0.1E-8
   RMS_FORCE 0.1E-8
 &END GEO_OPT
&END MOTION
&FORCE_EVAL
 &PRINT                      # print statement for ground-state or excited-state forces
  &FORCES
  &END FORCES
 &END PRINT 
 METHOD Quickstep
 &PROPERTIES
  &TDDFPT                    # TDDFPT input section to compute 10 excited states
   &DIPOLE_MOMENTS
    DIPOLE_FORM LENGTH
   &END DIPOLE_MOMENTS
   KERNEL sTDA
   &STDA
     FRACTION 0.0
     DO_EWALD TRUE
     DO_EXCHANGE F
   &END STDA
   NSTATES 10
   MAX_ITER   100
   MAX_KV 20 
   CONVERGENCE [eV] 1.0e-7
   RKS_TRIPLETS F
   &PRINT                     # NAMD print section to print excited-state eigenvectors
    &NAMD_PRINT
     PRINT_VIRTUALS T
     PRINT_PHASES T
    &END NAMD_PRINT
   &END PRINT
  &END TDDFPT
 &END PROPERTIES
  &DFT
    &QS
      METHOD GPW
     EPS_DEFAULT 1.0E-30
    &END QS
    &SCF
      SCF_GUESS restart
      &OT
         PRECONDITIONER FULL_ALL
         MINIMIZER DIIS
      &END OT
      &OUTER_SCF
         MAX_SCF 900
         EPS_SCF 1.0E-8
      &END OUTER_SCF
      MAX_SCF 10
      EPS_SCF 1.0E-8
    &END SCF
    POTENTIAL_FILE_NAME POTENTIAL
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    &MGRID
      CUTOFF 800
      REL_CUTOFF 60
  #    NGRIDS 5
    &END MGRID
    &POISSON
       PERIODIC NONE
       PSOLVER MT
    &END
    &XC
     &XC_FUNCTIONAL PBE
     &END XC_FUNCTIONAL
           &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF [angstrom] 20
         &END
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 14.0 14.0 14.0
      PERIODIC NONE
    &END CELL
                                    # Coordinates are provided externally for the interface
  #   COORD_FILE_NAME converged_pyrazine.xyz
  #   COORD_FILE_FORMAT XYZ 
     &COORD
     @include coord.cp2k          
     &END COORD
    &TOPOLOGY
     &CENTER_COORDINATES T
     &END
     NATOMS 10                       # specifying number of atoms for NEWTONX
     CONNECTIVITY OFF
    &END TOPOLOGY
    &KIND H 
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND N
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND C
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
